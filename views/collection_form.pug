extends layout 

block content 

    h3= title 

    form(method='POST' action='')
        div.form-group 
            label(for='name') Name: 
            input(type="text" name='name' placeholder='name...' value=(undefined===collection ? '' : collection.name))

            label(for='description') Description: 
            input(type='text' name='description' placeholder='description...' value=(undefined===collection ? '' : collection.description))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li error 

