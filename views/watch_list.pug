extends layout 

block content 

    h3= title 

    ul 
        - watch_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each watch in watch_list
        li  
            a(href=watch.url) #{watch.name} 
            |   (#{watch.reference_number})

    else 
        li There are no watches. 